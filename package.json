{
  "name": "system-bank",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:file": "node scripts/run-ng-test.js",
    "serve:ssr:system-bank": "node dist/system-bank/server/server.mjs",
    "lint": "ng lint",
    "lint:file": "eslint",
    "test:jest": "jest",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,js,html,scss}": [
      "npm run lint:file"
    ],
    "*.spec.ts": [
      "npm run test:file"
    ],
    "*.test.{ts,js}": [
      "npm run test:jest"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "tabWidth": 2,
    "semi": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.8",
    "@angular/common": "^20.3.4",
    "@angular/compiler": "^20.3.4",
    "@angular/core": "^20.3.4",
    "@angular/forms": "^20.3.4",
    "@angular/material": "^20.2.8",
    "@angular/platform-browser": "^20.3.4",
    "@angular/platform-server": "^20.3.4",
    "@angular/router": "^20.3.4",
    "@angular/ssr": "^20.3.5",
    "@types/crypto-js": "^4.2.2",
    "crypto-js": "^4.2.0",
    "express": "^5.1.0",
    "ngx-mask": "^20.0.3",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.23.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.5",
    "@angular/cli": "^20.3.5",
    "@angular/compiler-cli": "^20.3.4",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.19",
    "angular-eslint": "20.4.0",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.9.0",
    "jest": "^30.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.4",
    "ts-jest": "^29.4.5",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.40.0"
  }
}
